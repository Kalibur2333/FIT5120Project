@using FIT5120Project.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

@*Admin Login Page.
    Code by Mengzhen Li*@
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    btn: '#757F4D',
                    btnOn: '#869256',
                    HeroText: '#ABDD78',
                    CardText: '#817B7B',
                    bad: '#B16554',
                    bluebar: '#A5BC4A',
                    slidebar: '#333333BF',
                    bggrey: '#F5F5F5'
                },
                screens: {
                    sm: '480px',
                    md: '768px',
                    lg: '976px',
                    xl: '1440px',
                },

            }
        }
    }
</script>
<body class="bg-btn">
    <main aria-labelledby="title">

        <div href="#" class="block max-w-sm mx-auto mt-40 p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
            <div class="col-md-8">
                <section id="loginForm">
                    <p class="mb-5 text-l font-normal text-btn lg:text-l">Welcome to Wardrobe for Earth</p>
                    <form method="post" action="@Url.Action("VerifyPassword", "Account")">
                        Password: <input type="password" name="password" required />
                        <input type="submit" value="Enter" class="text-white bg-btn hover:bg-btnOn mt-5 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" />
                    </form>
                </section>
            </div>
        </div>
    </main>
</body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
